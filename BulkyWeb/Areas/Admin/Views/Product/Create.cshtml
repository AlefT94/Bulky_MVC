@model ProductVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            @*Como o nome da propriedade é Id, não necessário declarar o input para 
                o form, se fosse um nome diferente, por exemplo CodigoCategoria, seria
                necessário preenchê-lo.
            *@
            <div class="border p-3 mt-4">
                @*Summary que exibe as validações, pode ser All, ModelOnly ou None*@
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Title" type="text"  class="form-control border-0 shadow"/>
                    <label asp-for="Product.Title" class="p-0"></label>
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Product.Description" type="text"  class="form-control border-0 shadow"></textarea>
                    <label asp-for="Product.Description" class="p-0"></label>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.ISBN" type="text"  class="form-control border-0 shadow"/>
                    <label asp-for="Product.ISBN" class="p-0"></label>
                    <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Author" type="text"  class="form-control border-0 shadow"/>
                    <label asp-for="Product.Author" class="p-0"></label>
                    <span asp-validation-for="Product.Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.ListPrice" type="number"  class="form-control border-0 shadow"/>
                    <label asp-for="Product.ListPrice" class="p-0"></label>
                    <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Price" type="number"  class="form-control border-0 shadow"/>
                    <label asp-for="Product.Price" class="p-0"></label>
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Price50" type="number"  class="form-control border-0 shadow"/>
                    <label asp-for="Product.Price50" class="p-0"></label>
                    <span asp-validation-for="Product.Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.Price100" type="number"  class="form-control border-0 shadow"/>
                    <label asp-for="Product.Price100" class="p-0"></label>
                    <span asp-validation-for="Product.Price100" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <!--<select asp-for="CategoryId" asp-items="ViewBag.CategoryList" type="number"  class="form-select border-0 shadow">-->
                     <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" type="number"  class="form-select border-0 shadow">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <label asp-for="Product.CategoryId" class="p-0"></label>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Product.ImageUrl" type="text"  class="form-control border-0 shadow"/>
                    <label asp-for="Product.ImageUrl" class="p-0"></label>
                    <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
                </div>
        
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">
                            Create
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>

@*Adiciona as validações da Model no client, fazendo isso antes
    de enviar para o server e poupando requisições
    Obs: Funciona apenas para as validações de Data Notations*@
@section Scripts{
    @{
        <partial name ="_ValidationScriptsPartial"/>
    }
}